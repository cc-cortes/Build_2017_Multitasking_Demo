<Page
    x:Class="Build2017_Multitasking.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Build2017_Multitasking"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Row="0">
            <Image Source="ms-appx:///Assets/smk_mock.png" />
        </ScrollViewer>


        <CommandBar x:ConnectionId='1' Grid.Row="1" Grid.ColumnSpan="2" x:Name="ButtonBar" >
            <AppBarButton x:ConnectionId='2' Name="ConnectButton" Visibility="Visible"  Label="Device Search" Icon="Find"                                  ></AppBarButton>
            <AppBarButton x:ConnectionId='3' Name="DisconnectButton" Visibility="Collapsed" Label="Stop Search" Icon="View"                                     ></AppBarButton>
            <AppBarButton x:ConnectionId='4' Name="PlayButton" Visibility="Visible"  Label="Play" Icon="Play"                        ></AppBarButton>
            <AppBarButton x:ConnectionId='5' Name="StopButton" Visibility="Collapsed"  Label="Pause" Icon="Pause"                        ></AppBarButton>
            <AppBarButton x:ConnectionId='6' Name="CompileButton" Visibility="Visible"  Label="Compile" Icon="Save"                                           ></AppBarButton>
            <AppBarButton x:ConnectionId='7' Name="StopCompileButton" Visibility="Collapsed"  Label="Stop" Icon="Cancel"                                         ></AppBarButton>
        </CommandBar>

    </Grid>
</Page>

